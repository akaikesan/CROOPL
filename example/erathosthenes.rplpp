    method initSieves(int lim, Sieve[] table)
        table[0] += 1
        table[1] += 1
        local int l = 2
        from l = 2 do
            local int i = 2 
            from i = 2 do
                // table[i] = 0 means i is prime
                if table[i] = 0 & i != l then 
                    if l % i = 0 then
                        table[l] += 1
                    else skip fi l % i = 0 
                else skip
                fi table[i] = 0 & i != l
                i += 1

            loop skip
            until i > l
            delocal int i = l + 1
            l += 1

        loop skip
        until l > lim
        delocal int l = lim + 1






