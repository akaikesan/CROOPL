class Sieve 
    int prime

    method setPrime(int p)
        prime += p

    method sieve(int[] table, int tableSize)

        print table 
        local int i = 0
        from i = 0 do skip
        loop
            if i % prime = 0 & i != prime then
                table[i] += 1
            else skip
            fi i % prime = 0 & i != prime
            i += 1
        until i = tableSize
        delocal int i = tableSize
        print table 

